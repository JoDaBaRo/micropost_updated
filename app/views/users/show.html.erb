<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
    <div id="stats-<%= @user.id %>">
      <%= render 'shared/stats', user: @user %>
     </div>
    </section>
  </aside>
  <div class="col-md-8">
    <div id="follow-form-<%= "#{current_user&.id}-#{@user.id}" %>">
    <%= render 'follow_form' if logged_in? %>
    </div>
    <% if @user.microposts.any? && logged_in? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>